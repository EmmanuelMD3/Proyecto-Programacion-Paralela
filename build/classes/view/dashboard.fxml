<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.shape.Circle?>   

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.DashboardController"
            prefWidth="1000" prefHeight="600"
            styleClass="root-dashboard">

    <left>
        <VBox styleClass="sidebar" prefWidth="220" spacing="20" alignment="TOP_CENTER">
            <VBox alignment="CENTER" spacing="10" styleClass="profile-box">
                <Circle radius="40" styleClass="profile-pic"/>
                <Label fx:id="lblNombre" text="Usuario" styleClass="profile-name"/>
                <Label fx:id="lblCorreo" text="correo@ejemplo.com" styleClass="profile-email"/>
            </VBox>

            <Button text="🛒 Productos" styleClass="sidebar-btn" onAction="#handleProductos"/>
            <Button text="🛍️ Carrito" styleClass="sidebar-btn" onAction="#handleCarrito"/>
            <Button text="📜 Mis compras" styleClass="sidebar-btn" onAction="#handleCompras"/>
            <Button text="🚪 Cerrar sesión" styleClass="sidebar-btn" onAction="#handleCerrarSesion"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" styleClass="content">
            <Label text="Bienvenido a la Tienda Online" styleClass="dashboard-title"/>
        </StackPane>
    </center>
</BorderPane>
